{
    "name": "chain-bridge",
    "version": "0.1.0",
    "description": "Glorious gateway to the Lum Network blockchain",
    "author": "",
    "private": true,
    "license": "apache",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build api",
        "build:api": "nest build api",
        "build:sync:consumer": "nest build sync:consumer",
        "build:sync:scheduler": "nest build sync:scheduler",
        "console": "node dist/cli.js",
        "console:dev": "ts-node -r tsconfig-paths/register src/cli.ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start:api:dev": "nest start api --watch",
        "start:api:debug": "nest start api --debug --watch",
        "start:api:prod": "node dist/api",
        "start:sync:consumer:dev": "nest start sync:consumer --watch",
        "start:sync:consumer:debug": "nest start sync:consumer --debug --watch",
        "start:sync:consumer:prod": "node dist/sync_consumer",
        "start:sync:scheduler:dev": "nest start sync:scheduler --watch",
        "start:sync:scheduler:debug": "nest start sync:scheduler --debug --watch",
        "start:sync:scheduler:prod": "node dist/sync_scheduler",
        "seed:test:db": "node ./src/database/seeds/generate-seeds.ts",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "yarn run seed:test:db && jest --config ./test/jest-e2e.json --detectOpenHandles --runInBand"
    },
    "dependencies": {
        "@elastic/elasticsearch": "^7.6.0",
        "@lum-network/sdk-javascript": "^0.7.11",
        "@nestjs/axios": "^0.1.0",
        "@nestjs/bull": "^0.6.1",
        "@nestjs/common": "^9.1.4",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.1.4",
        "@nestjs/microservices": "^9.1.4",
        "@nestjs/platform-express": "^9.1.4",
        "@nestjs/platform-socket.io": "^9.1.4",
        "@nestjs/schedule": "^2.1.0",
        "@nestjs/swagger": "^6.1.2",
        "@nestjs/terminus": "^9.1.2",
        "@nestjs/typeorm": "^9.0.1",
        "@nestjs/websockets": "^9.1.4",
        "@ntegral/nestjs-sentry": "^4.0.0",
        "@sentry/node": "^7.16.0",
        "@sentry/tracing": "^7.14.2",
        "bull": "^4.10.0",
        "cache-manager": "^4.0.0",
        "cache-manager-redis-store": "^2.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "dotenv": "^16.0.3",
        "hosted-git-info": "^5.1.0",
        "joi": "^17.6.2",
        "lodash": "^4.17.21",
        "long": "^5.2.0",
        "moment": "^2.29.4",
        "nestjs-console": "^8.0.0",
        "node-notifier": "^10.0.1",
        "pg": "^8.8.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.7",
        "swagger-ui-express": "^4.5.0",
        "typeorm": "0.3.10",
        "xmlhttprequest-ssl": "^2.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.1.4",
        "@nestjs/schematics": "^9.0.3",
        "@nestjs/testing": "^9.1.4",
        "@types/bull": "^3.15.9",
        "@types/cache-manager": "^4.0.2",
        "@types/express": "^4.17.14",
        "@types/jest": "29.1.2",
        "@types/joi": "^17.2.3",
        "@types/moment": "^2.13.0",
        "@types/node": "^18.8.3",
        "@types/pg": "^8.6.5",
        "@types/socket.io": "^3.0.2",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "eslint": "8.22.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^29.1.2",
        "prettier": "^2.7.1",
        "supertest": "^6.3.0",
        "ts-jest": "29.0.3",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.8.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "@app/(.*)$": "<rootDir>/$1"
        }
    }
}
