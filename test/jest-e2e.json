{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "@app/(.*)$": "<rootDir>/../src/$1"
    },
    "testSequencer": "./test-sequencer.ts",
    "testTimeout": 20000
}
